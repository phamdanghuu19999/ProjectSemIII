@model Project.Net.Models.DataModel.Supplier

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<h2>Details</h2>

<div>
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">@ViewBag.Title</h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.SupplierName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Logo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Created_at)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Update_at)
                    </th>
                   
                </tr>

                
                    <tr>
                        <td>
                            @Html.DisplayFor(model => model.SupplierName)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Address)
                        </td>
                        <td>
                            <img src="@Model.Logo" alt="Alternate Text" />
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Created_at)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Update_at)
                        </td>
                        
                    </tr>
                

            </table>
        </div>
        <!-- /.box-body -->
        <p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.SupplierId }) |
            @Html.ActionLink("Back to List", "Index")
        </p>
        <!-- /.box-footer-->
    </div>
    <hr />
   
</div>

